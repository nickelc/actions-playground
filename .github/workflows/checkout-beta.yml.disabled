name: checkout-v2-beta

on: [push, pull_request]

jobs:
  test:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v2-beta
      - name: Checkout wiki
        uses: actions/checkout@v2-beta
        with:
          repository: nickelc/actions-playground.wiki
          ref: master
          path: wiki
      - run: |
          echo "$GITHUB_WORKSPACE"
          ls -la . || true
          cat README.md || true
